<p id="notice"><%= notice %></p>

<h1><%= current_user.classroom%>呼び出し一覧</h1>

<table>
  <thead>
    <tr>
      <th>呼び出し日</th>
      <th>学生氏名</th>
      <th>呼び出し先</th>
      <th>理由</th>
      <th>行く場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @summonses.each do |summons| %>
      <tr>
        <td><%= summons.created_at.strftime('%Y年%m月%d日') %></td>
        <td><%= summons.student %></td>
        <td><%= summons.teacher %></td>
        <td><%= summons.reason %></td>
        <td><%= summons.place %></td>
        <td><%= link_to 'Show', summons %></td>
        <td><%= link_to 'Edit', edit_summons_path(summons) %></td>
        <td><%= link_to 'Destroy', summons, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

