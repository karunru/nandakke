<h6><%= current_user.classroom%></h6>
<div class="flexbox">
  <article class="summons">
    <h1>呼び出し情報</h1>
		<% if can? :manege, Summons %>
			<%= link_to 'edit summonses', '/summonses', :style=>"font-size: small;" %>
		<% end %>
		<table>
				<thead>
					<tr>
						<th>呼び出し日</th>
						<th nowrap>学生氏名</th>
						<th nowrap>呼び出し先</th>
						<th>理由</th>
						<th>行く場所</th>
				</tr>
			</thead>

		<tbody>
			<% @summonses.each do |summons| %>
				<tr>
					<td nowrap><%= summons.created_at.strftime('%Y年%m月%d日') %></td>
				  <td><%= summons.student %></td>
					<td><%= summons.teacher %></td>
					<td><%= summons.reason %></td>
					<td><%= summons.place %></td>
      </tr>
			<% end %>
		</tbody>
	</table>
  </article>

	<article class="schedule">
    <h1>今後の予定</h1>
		<% if can? :manege, Schedule %>
			<%= link_to 'edit schedules', '/schedules', :style=>"font-size: small;" %>
		<% end %>
		<table>
			<thead>
				<tr>
					<th>日付</th>
					<th>時間</th>
					<th>タイトル</th>
					<th>内容</th>
					<th>その他</th>
			</tr>
		</thead>

		<tbody>
			<% @schedules.each do |schedule| %>
				<tr>
					<td nowrap><%= schedule.deadline_date.strftime('%Y/%m/%d') %></td>
					<td nowrap><%= schedule.deadline_time.strftime('%H:%M') %></td>
					<td><%= schedule.subject %></td>
					<td><%= schedule.title %></td>
					<td><%= schedule.submit_method %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
  </article>
</div>
