<h1>学生権限管理</h1>

<p><%= current_user.username %></p>

<%= form_for :user, :url => update_all_path, :html => { :method => :put } do %>

  <table>
    <thead>
      <tr>
        <th>学籍番号</th>
        <th>権限</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <%= fields_for "user[]", user do |user_fields| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user_fields.select(:role, ["editor","member"]) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= submit_tag "変更" %>
  </div>

<% end %>
